{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits"
  ],
  "labels": [
    "deps"
  ],
  "postUpdateOptions": [
    "gomodUpdateImportPaths"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automergeStrategy": "squash",
      "automerge": true,
      "platformAutomerge": true
    },
    {
      "description": "Group koanf packages",
      "matchDatasources": [
        "go"
      ],
      "groupName": "koanf",
      "matchDepNames": [
        "/^github.com/knadh/koanf(/.*)?$/"
      ]
    }
  ]
}
